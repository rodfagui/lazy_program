<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <form action="/" method="post" enctype="multipart/form-data" class="upload">
      <div class="form-group">
        <input type="text" class="form-control" name="user" placeholder="Add an username...">
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          <input type="file" name="file" class="buttons">
          Seleccionar
        </label>
      </div>
      
      <div class="form-group">
        <label class="btn btn-primary">
          <input type="submit" class="buttons">
          Ejecutar
        </label>
      </div>  
    </form>
  </div>  
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table">
      <thead>
        <tr>
          <th style="text-align: center;">Username</th>
          <th style="text-align: center;">Created at</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>  
          <tr>
            <td><%= user.nombre %></td>
            <td><%= user.created_at %></td>
          </tr>    
        <% end %>  
      </tbody>
    </table> 
  </div>  
</div>

